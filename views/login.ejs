<!doctype html>
<html>

<head>
    <title>Login to <%=shopName%></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
</head>

<body>
    <% if (!loggedInUser) { %>
        <h1>Login to <%=shopName%></h1>
        <form method="POST" action="/login">
            <p>Username: <input type="text" name="username" /></p>
            <p>Password: <input type="password" name="password" /></p>
            <input type="submit" value="Login" />
        </form>
        <div>
            <p>Are you not a member? Please click<a id="signup-link" href="/register"><span id="signup-text"> here</span></a> to sign up.</p>
        </div>
    <% } else { %>
        <p>You are already logged in as <%= loggedInUser %>. <a href="/logout">Logout</a></p>
    <% } %>

    <form action="/" method="get">
        <button type="submit">Go back to main menu</button>
    </form>

</body>

</html>
